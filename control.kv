<Gerenciador>:
    Login:
        name: 'login'
    Home:
        name: 'home'
    Global:
        name: 'global'
    Confirm:
        name: 'confirm'
    Home_Adm:
        name: 'home_adm'

#################################### Login ##################################################
<Login>:
    name: 'login'
    orientation: 'vertical'

    GridLayout:
        cols: 1
        Label:
            font_size: '10sp'
            text: "[color=111111][/color]"
            size_hint_y: None
            markup: True

        Label:
            size_hint_y: None
            font_size: '48sp'
            text: "[color=ff9999]Call[/color] [color=ff3333][sub]with[/sub][/color][color=3333ff][b] Control[sup][/sup][/b][/color]"
            markup: True


        GridLayout:
            size_hint_y: None
            cols: 1
            TextInput:
                write_tab: False
                multiline: False
                id: usuario
                hint_text: "Usuário"
            TextInput:
                password_mask: "•"
                multiline: False
                id: senha
                hint_text: "Senha"
                password: True
                write_tab: False
                on_text_validate: root.on_enter()

            BoxLayout:
                text: "\n\n\n\n\n"

        GridLayout:
            size_hint_y: None
            cols: 1
            Label:
                markup: True
                id: validate
                text: ""

            Button:
                size_hint_y: 1
                text: 'Login'
                on_press: root.trylogin()
            Button:
                text: 'Sair'
                on_press: root.quit()
        BoxLayout:
            width: 100
            Image:
                source: 'metalsa.png'


#################################### HOME ##################################################

<Home>:
    name: 'home'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 2
            Button:
                background_color: 2,1,0,1
                color: 1,1,1,1
                font_size: '40sp'
                text: "SELECIONE A LINHA"

            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN1 - L1'
                on_press: root.trocaenn1l1()



            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN1 - L2'
                on_press: root.trocaenn1l2()
            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN2 - TUBOS'
                on_press: root.trocaenn2tubos()
            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN2 - SOLDA'
                on_press: root.trocaenn2solda()
            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN3 - PINTURA'
                on_press: root.trocaenn3pintura()
            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN3 - JATO'
                on_press: root.trocaenn3jato()
            Button:
                font_size: '25sp'
                background_color: 3,3,0,1
                color: 0,0,0,1
                text: 'ENN4 - DAF'
                on_press: root.trocaenn4daf()
            Button:
                font_size: '25sp'
                background_color: 0,0,0,1
                color: 1,1,1,1
                text: 'LOG OUT'
                on_press: root.logout()


