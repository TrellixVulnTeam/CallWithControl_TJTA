##################################### Tela de confirmação ######################################################

<Confirm>
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 3

            Button:
                font_size: '40sp'
                background_color: 0,0,2,1
                size_hint_y: None
                text: 'Deseja prosseguir?'
            GridLayout:
                cols: 2
                Button:
                    font_size: '20sp'
                    background_color: 0,2,0,1
                    size_hint_x: 2
                    size_hint_y: None
                    text: 'REGISTRAR CHAMADO'
                    on_release: root.abrirchamado()
                Button:
                    font_size: '20sp'
                    color: 1,1,1,1
                    background_color: 0,0,0,1
                    size_hint_x: 2
                    size_hint_y: None
                    text: 'VOLTAR'
                    on_release:root.cancelar()
                Button:
                    id: confirmlinha
                    font_size: '25sp'
                    background_color: 3,3,0,1
                    color: 0,0,0,1
                    text: ''
                Button:
                    id: confirmarea
                    font_size: '25sp'
                    background_color: 3,3,0,1
                    color: 0,0,0,1
                    text: ''
            GridLayout:
                cols: 1
                Label:
                    id: status
                    font_size: '20sp'
                    color: '#10001'
                    text: ''
                    markup: True
                    bold: True
                Button:
                    id: confirmuser
                    font_size: '25sp'
                    background_color: 3,3,0,1
                    color: 0,0,0,1
                    text: ''

